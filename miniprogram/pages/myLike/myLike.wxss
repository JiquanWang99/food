.container {
  width: 650rpx;
  margin: 0 auto;
}

.box {
  height: 250rpx;
  position: relative;
  background-color: #F7F7F7;
  border: 1rpx solid #ccc;
  border-radius: 30rpx;
  margin-top: 30rpx;
}

.header {
  position: relative;
  position: absolute;
  height: 50rpx;
  background-color: #FFFFFF;
  border-radius: 30rpx 30rpx 0 0;
  width: 100%;
  top: 0;
}

.time {
  color: #a8a8a8;
  height: 50rpx;
  font-size: 28rpx;
  margin-left: 30rpx;
  position: absolute;
  left: 10rpx;
  top: 5rpx;
}

.elipsis image {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 30rpx;
  top: 0;
  bottom: 0;
}

.content {
  height: 150rpx;
  display: flex;
  justify-content: center;
  position: absolute;
  bottom: 50rpx;
}

.img image {
  width: 110rpx;
  height: 110rpx;
  margin: 20rpx 30rpx;
  border-radius: 15rpx;
}

.detail {
  width: 460rpx;
}

.title {
  margin: 15rpx 30rpx 0 5rpx;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.desc {
  margin: 15rpx 30rpx 10rpx 5rpx;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}


.clickBar {
  height: 50rpx;
  width: 50%;
  box-sizing: border-box;
  padding-left: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 0 0 30rpx 30rpx;
  position: absolute;
  bottom: 0;
}

.clickBar image {
  width: 30rpx;
  height: 30rpx;
}

.comment,
.like,
.favor {
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.comment,
.like,
.favor,
text {
  margin-left: 5rpx;
  font-size: 20rpx;
  color: #a8a8a8;
}

.tip {
  margin-top: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.tip image {
  width: 250rpx;
  height: 200rpx;
}

.tip text {
  font-size: 30rpx;
  margin: 50rpx 0;
}

.tip button {
  background-color: #FF8D00;
  color: #FFF;
}