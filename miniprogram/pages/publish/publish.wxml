<view class="container">
	<view class="foodName">
		<input placeholder="请输入美食的名称~" placeholder-class="iptHolder" maxlength="20" confirm-type="next" bindinput="foodNameCount"></input>
		<text class="iptCount">{{foodNameCount}}/20字</text>
	</view>
	<view class="address">
		<input placeholder="为美食贴上标签吧~" placeholder-class="iptHolder" maxlength="20" confirm-type="next" bindinput="addrCount"></input>
		<text class="iptCount">{{addrCount}}/20字</text>
	</view>
	<view class="desc">
		<textarea placeholder="描述一下这个美食吧~" placeholder-class="textHolder" bindinput="userDesc" maxlength="3000" auto-height>
    </textarea>
	</view>
	<!-- 上传图片 -->
	<view class="uploadArea">
		<view class="tip">Tip:您选择的第一张图将会在主页显示</view>
		<view>
			<block wx:for="{{images}}" wx:key="*this">
				<view class="imageUpBox">
					<image class="uploadImg" src="{{item}}" data-idx="{{index}}" mode="aspectFill" bindtap="previewImg"></image>
					<view class="removeImg" bindtap="removeImg" data-idx="{{index}}">
						<image src="/images/close.png"></image>
					</view>
				</view>
			</block>
		</view>

		<view class="uploadBtn" bindtap="chooseImage" wx:if="{{images.length < 6}}">
			<image src="/images/add.png"></image>
		</view>
	</view>
	<button type="primary" class="pub" bindtap="publishFood" hover-class="btn-hover" disabled="{{pubBtn}}">分享</button>
</view>

<canvas id='compress' type='2d' style="width:{{cWidth}}px; height:{{cHeight}}px;"></canvas>