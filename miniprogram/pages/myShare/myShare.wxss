.container {
  width: 650rpx;
  margin: 0 auto;
}

.box:first-child {
  margin-top: 30rpx;
}

.box {
  background-color: #FFF;
  border: 1rpx solid #ccc;
  height: 350rpx;
  position: relative;
  border-radius: 30rpx;
  margin-top: 50rpx;
  box-shadow: 3rpx 8rpx 10rpx rgba(0, 0, 0, .6);
  animation: bounce 0.6s 1 alternate;
}

@keyframes bounce {
  0% {
    transform: scale(.7);
  }

  75% {
    transform: scale(1.1);
  }

  100% {
    transform: scale(1.0);
  }
}

.box:first-child {
  margin-top: 30rpx;
}

.box:last-child {
  margin-bottom: 50rpx;
}


.header {
  position: relative;
  position: absolute;
  height: 50rpx;
  border-radius: 30rpx 30rpx 0 0;
  width: 100%;
  top: 1rpx;
}

.time {
  color: #a8a8a8;
  height: 40rpx;
  font-size: 32rpx;
  margin-left: 28rpx;
  position: absolute;
  left: 10rpx;
  top: 10rpx;
}

.delete image {
  width: 34rpx;
  height: 34rpx;
  position: absolute;
  right: 30rpx;
  top: 16rpx;
  bottom: 0;
}

.edit image {
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  right: 90rpx;
  top: 18rpx;
  bottom: 0;
}

.content {
  height: 240rpx;
  display: flex;
  justify-content: center;
  position: absolute;
  bottom: 50rpx;
}

.img image {
  width: 180rpx;
  height: 180rpx;
  margin: 20rpx 30rpx;
  border-radius: 10rpx;
}

.detail {
  width: 410rpx;
}

.title {
  margin: 15rpx 30rpx 0 5rpx;
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.desc {
  margin: 15rpx 30rpx 20rpx 5rpx;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
}


.clickBar {
  height: 60rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-evenly;
  border-radius: 0 0 30rpx 30rpx;
  position: absolute;
  bottom: 0;
}

.clickBar image {
  width: 56rpx;
  height: 56rpx;
}

.comment,
.like,
.favor {
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;

}

.comment,
.like,
.favor,
text {
  margin-left: 15rpx;
  font-size: 28rpx;
  color: #a8a8a8;
}

.tip {
  margin-top: 380rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.tip image {
  width: 250rpx;
  height: 200rpx;
}

.tip text {
  font-size: 30rpx;
  margin: 50rpx 0;
  color: #ccc;
}

.tip button {
  background-color: #FF8D00;
  color: #FFF;
}