
.list {
  height: 40vh;
}

.listItem {
  position: relative;
  width: 100%;
  height: 120rpx;
  padding: 0 25rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  border-bottom: 1rpx solid #ccc;
  box-sizing: border-box;
}

.title {
  font-size: 34rpx;
  font-weight: 650;
  width: 650rpx;
  text-overflow: ellipsis;
  overflow: hidden;
}

.category {
  font-size: 26rpx;
}

.address {
  font-size: 26rpx;
  width: 600rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

.distance {
  position: absolute;
  right: 15rpx;
  font-size: 26rpx;
}

.distance image {
  vertical-align: middle;
  width: 30rpx;
  height: 30rpx;
}

.selected {
  background-color: #FF8D00;
  color: #fff;

}


.lineArea {
  position: absolute;
  width: 750rpx;
  height: 40vh;
  background-color: #ffffff;
}

.container {
  width: 750rpx;
  height: 100%;
  background-color: #ffffff;
}

.content {
  padding: 20rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.content .title {
  font-size: 40rpx;
  padding-bottom: 20rpx;
  width: 100%;
}

.content .title image:nth-child(1) {
  width: 48rpx;
  height: 48rpx;
  vertical-align: sub;
}

.content .title image:nth-child(2) {
  width: 38rpx;
  height: 38rpx;
  vertical-align: middle;
  padding-right: 20rpx;
  float: right;
}

.content .title text {
  font-size: 26rpx;
  padding-left: 10rpx;
}

.content .detailLoc {
  font-size: 26rpx;
  width: 80rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  float: right;
  margin-right: 30rpx;
  background-color: #FF8D00;
  color: #ffffff;
  border-radius: 15rpx;
}


.content .line {
  min-height: 80rpx;
  font-size: 32rpx;
  border-bottom: 1rpx solid #ccc;
  line-height: 80rpx;
  margin-bottom: 10rpx;
}

.line image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: text-bottom;
}