page{
  background-color: #FFF;
}

.container{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 35rpx;
  font-style: italic;
  font-weight: 700;
}

.container view{
  margin-bottom: 10rpx;
}

.container image{
  width: 650rpx;
  height: 350rpx;
  margin-bottom: 15rpx;
  border-radius: 30rpx;
  border: 1rpx solid #ccc;
  box-shadow: 5rpx 10rpx 15rpx #666;
}

.container view:first-child{
  margin-top: 90rpx;
}

.container view:last-child{
  margin: 80rpx 0;
}