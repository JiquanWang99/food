page {
  color: #FFF;
}

.swiperTab {
  display: flex;
  flex-direction: row;
  line-height: 80rpx;
  background-color: #FFF;
  color: #999;
}

.tabItem {
  width: 16.7%;
  text-align: center;
  font-size: 28rpx;
}


.swiper {
  width: 750rpx;
  margin-top: 30rpx;
}


.on {
  color: #FF8D00;
  border-bottom: 5rpx solid #FF8D00;
}


.content {
  background-color: #FFF;
  border-radius: 30rpx;
  width: 650rpx;
  margin: 0 auto 30rpx;
  color: #666;
  line-height: 55rpx;
  padding: 30rpx;
  box-shadow: 5rpx 10rpx 15rpx #ccc;
  text-shadow: 1rpx 1rpx 10rpx #ccc;
}

.name {
  font-size: 50rpx;
  margin-bottom: 30rpx;
  display: block;
}

.content image {

  width: 100%;
  height: 350rpx;
}

.like {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.like image {
  width: 80rpx;
  height: 80rpx;
}

.like text:nth-child(3) {
  font-size: 26rpx;
  font-style: italic;
}