.container {
  width: 650rpx;
  margin: 0 auto;
  background-color: #F7F7F7;
}

.header {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #F7F7F7;
}

.placeholderStyle {
  font-size: 28rpx;
  color: #ccc;
}

.searchIpt {
  border: 1rpx solid #ccc;
  flex-grow: 1;
  height: 80rpx;
  padding: 0 20rpx;
}

.searchBtn {
  background: linear-gradient(to right bottom, #F7B52C, #F59C70, #EF718F);
  width: 200rpx !important;
  height: 84rpx !important;
  margin-top: -1rpx !important;
  border-radius: 0;
}

.searchBtn image {
  width: 60rpx;
  height: 60rpx;
}

.food {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  float: left;

}

.food image {
  width: 150rpx;
  height: 150rpx;
  margin: 30rpx 32rpx 0 32rpx;
  border-radius: 50%;
  animation: foodJump 0.8s 4 alternate;
  box-shadow: 3rpx 8rpx 12rpx #666;
}


@keyframes foodJump {
  0% {
    transform: translate3d(0, 0, 0);
    box-shadow: 3rpx 8rpx 12rpx #666;
  }

  100% {
    transform: translate3d(0, -12rpx, 0);
    box-shadow: 5rpx 10rpx 15rpx #666;
  }
}

.food text {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  width: 210rpx;
  text-align: center;
  font-size: 26rpx;
  margin-top: 10rpx;
}

.food:last-child {
  margin-bottom: 50rpx;
}

.tip {
  margin-top: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.tip image {
  width: 250rpx;
  height: 200rpx;
}

.tip text {
  font-size: 30rpx;
  margin: 50rpx 0;
  color: #ccc;
}

.tip button {
  background-color: #FF8D00;
  color: #FFF;
}