.container{
  width: 100%;
  background-color: #F7F7F7;
}

.header{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #FFFFFF;
}

.searchIpt{
  border: 1rpx solid #ccc;
  flex-grow: 1;
  height: 80rpx;
  padding-left:20rpx;
}

.searchBtn{
  background:linear-gradient(to right bottom,#F7B52C,#F59C70,#EF718F);
  width: 200rpx !important;
  height: 80rpx !important;
}

.searchBtn image{
  width: 60rpx;
  height: 60rpx;
}

.food{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  float: left;
  margin: 30rpx 0 0 75rpx;
}

.food image{
  width: 150rpx;
  height: 150rpx;
  border: 1rpx solid #ccc;
  border-radius: 50%;
  animation: foodJump 1s infinite alternate;
}

@keyframes foodJump {
  0% {
    transform: translate3d(0, 0, 0);
    box-shadow: rgba(0, 0, 0, 0.4) 0 0 5rpx;
  }
  100% {
    transform: translate3d(0, -5rpx, 0);
    box-shadow: rgba(0, 0, 0, 0.4) 0 10rpx 20rpx;
  }
}

.tip{
  margin-top: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.tip image{
  width: 250rpx;
  height: 200rpx;
}

.tip text{
  font-size: 30rpx;
  margin: 50rpx 0;
}

.tip button{
  background-color:#FF8D00;
  color: #FFF;
}


